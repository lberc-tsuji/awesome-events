.layouts__application
  = render partial: 'shared/header'

%h1.mt-2 ユーザー情報の追加

%br

= form_with(model: @user, class: "form-horizontal") do |f|
  = f.fields_for @userinfo do |i|
    #errors
    .form-group
      = i.label :ニックネーム
      = i.text_field :nickname, class: "form-control"
    .form-group
      = i.label :メールアドレス
      = i.email_field :email, class: "form-control"
    .form-group
      = i.label :自己紹介
      = i.text_area :content, class: "form-control"

  = f.submit class: "btn btn-primary"

  = link_to "キャンセル", root_path, class: "btn btn-secondary"
