.layouts__application
  = render partial: 'shared/header'
%h1 ユーザー詳細

%br

.row
  .col-8
    .card.mb-2
      %h5.card-header ユーザー名
      .card-body
        =image_tag @user.image_url, width:50, height: 50
        %h5= @user.name
    .card.mb-2
      %h5.card-header ユーザーのイベント一覧
      -@user.events.each do |event|
        .card-body
          = link_to(event, class: "card-link") do
            %h5= event.name


%br
.col-4
  = link_to "ユーザー情報を編集する", edit_user_path(@user), class: "btn btn-info btn-lg btn-block"
  = link_to "ユーザー一覧へ戻る", users_list_path, class: "btn btn-success btn-lg btn-block"
  = link_to "TOPへ戻る", root_path, class: "btn btn-secondary btn-lg btn-block"
